<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PadelWebXerez</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <nav class="navbar navbar-light bg-light">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/Fotos Finales - Padel Game Xerez/Detalles/logo.jpg" width="50" height="50" alt="">
                    </a>
                </nav>
            </div>
            <div class="container col-4">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between float-sm-left">
                    <ul class="navbar-nav flex-grow-1 ali">
                        <li class="nav-item">
                            <a class="nav-link text-white text-uppercase font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white text-uppercase font-weight-bold" asp-area="" asp-controller="SobreNosotros" asp-action="SobreNosotros">Sobre Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white text-uppercase font-weight-bold" asp-area="" asp-controller="Contacta" asp-action="Contacta">Contacta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white text-uppercase font-weight-bold" asp-area="" asp-controller="Reserva" asp-action="Reserva">Reserva</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container col-12">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white bg-primary">
        <div class="container text-center">
            &copy; 2021 - PadelWebXerez - Ismael Dominguez Campos - <a class="text-white-50" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
